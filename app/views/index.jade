extend layout
block content
  div(class='content content-1')
    div(class='sec-1 sec')
      div(class='pv-25')
        div(class='pv-150 tab-pv-50 ctr')
          h1(class='fw-300') WhisperChirp
          h4(class='fw-300') Chat with friends. No account needed.  
          div(class='chatsearch pv-35')
            input(id='go-to-room-input',placeholder='Enter a new or existing name of a chatroom.', class='mr-10')
            div(id='go-to-room',class='submit btn-1') go
block head-content
  meta(content="Video chat with friends. No plugins or account needed.",name="description")
  meta(content="video chat room, chat online, chat without plugins",name="keywords")
  script(src='//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js')
  script
    var is_homepage = true;
  style
    .chat-icon { display: none !important; }
block footer-content
  div(class='sec-1 sec')
    div(class='pv-25')
      nav
        ul
        div &copy; 2013 <a href="http://chie.do" target="_blank">Chiedo Labs</a>
  script(src='/static/js/index.js')
