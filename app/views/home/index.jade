extend layout
block content
  div(class='sec-1 sec')
    div(class='pv-25')
      div(class='pv-150 ctr')
        h1(class='fw-300') WhisperChirp
        h4(class='fw-300') Chat with friends. No account needed.  
        div(class='chatsearch pv-35')
          input(id='go-to-room-input',placeholder='Enter a new or existing name of a chatroom.', class='mr-10')
          div(id='go-to-room',class='submit btn-1') go
  script
    $(document).ready(function() {
      $("#go-to-room").click(function(){
        var parsed_string = $('#go-to-room-input').val();
        parsed_string = parsed_string.toLowerCase().split(' ').join('-');
        document.location.href = "/"+parsed_string;
      });

      $("#go-to-room-input").keypress(function(event){
        var keycode = (event.keyCode ? event.keyCode : event.which);
        if(keycode == '13'){
          $("#go-to-room").click();
        }
       
      });
    });
